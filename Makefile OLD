CC := gcc
CFLAGS := -g -Wall -Wextra -std=c11 -Iinclude -MMD -MP
LFLAGS := -lcurl -ljansson
SRC := $(shell find src -name '*.c')
OBJ := $(patsubst src/%.c,build/%.o,$(SRC))
BUILD_DIR := build
DEP := $(OBJ:.o=.d)
BIN := build/app

all: $(BIN)

$(BIN): $(OBJ)
	$(CC) $(CFLAGS) $^ -o $@ $(LFLAGS)

build/%.o: src/%.c
	@mkdir -p $(@D)
	$(CC) $(CFLAGS) -c $< -o $@

run: $(BIN)
	./$(BIN)

clean:
	$(RM) -rf $(BUILD_DIR)

-include $(DEP)

.PHONY: all run clean